
{
  "rules": {
    "users": {
      "$user_id": {
        // Permite leitura/escrita completa para o dono, incluindo 'meta' e 'lancamentos'
        ".read": "auth != null",
        ".write": "auth != null"
      }
    },
    "newsletter": {
      "subscribers": {
        // Apenas escrita para newsletter, leitura bloqueada
        ".read": "false",
        ".write": "auth != null"
      }
    }
  }
}
